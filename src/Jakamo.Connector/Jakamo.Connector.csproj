<Project Sdk="Microsoft.NET.Sdk.Worker">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <SelfContained>true</SelfContained>
        <PublishSingleFile>true</PublishSingleFile>
        <PublishReadyToRun>true</PublishReadyToRun>
        <PublishTrimmed>false</PublishTrimmed>
        <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
        <RootNamespace>Jakamo.Api.Connector</RootNamespace>
        <PackageVersion>0.0.1</PackageVersion>
        <Title>Jakamo Connector</Title>
        <Authors>Jakamo</Authors>
        <Description>Connector software for connecting to the Jakamo Digital Platform for Supplier Collaboration</Description>
        <Copyright>2025 Jakamo Osakeyhti√∂</Copyright>
        <Company>Jakamo</Company>
        <PackageProjectUrl>https://github.com/JakamoLtd/jakamo-connector</PackageProjectUrl>
        <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.1"/>
